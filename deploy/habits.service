[Unit]
Description=ProductivityTools Habits API (Spring Boot)
After=network.target

[Service]
Type=simple
User=springuser
Group=springuser
WorkingDirectory=/opt/PT.Habits
EnvironmentFile=/etc/default/habits
ExecStart=/usr/bin/java -jar /opt/PT.Habits/habits.api-0.0.1-SNAPSHOT.jar --server.port=${SERVER_PORT} --spring.datasource.password=${SPRING_DATASOURCE_PASSWORD}
Restart=on-failure
RestartSec=5
SuccessExitStatus=143
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target


