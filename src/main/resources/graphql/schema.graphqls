type Query {
  getPerson: Person
  getHabit(id: Int!): Habit
  getHabits: [Habit]
}

type Mutation {
  saveHabit(habitInput: HabitInput!): Boolean
  deleteHabit(id: Int!): Boolean
}

input HabitInput {
  id: ID
  name: String!
}

type Person {
  id: ID!
  firstName: String
  lastName: String
}

type Habit {
  id: ID!
  name: String
}
